# Kiekky Backend Configuration
# Copy this file to .env and update values

# Server
ENVIRONMENT=development
PORT=8080
BASE_URL=http://localhost:8080

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/kiekky?sslmode=disable

# Redis (optional - for caching and rate limiting)
REDIS_URL=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=168h

# Security
BCRYPT_COST=12
ENABLE_2FA=false

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY=10m
MAX_OTP_ATTEMPTS=3

# Email Provider: sendgrid, smtp, or mock
EMAIL_PROVIDER=mock
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@kiekky.com

# SMS Provider: twilio or mock
SMS_PROVIDER=mock
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Storage
USE_S3=false
S3_BUCKET=
S3_REGION=us-east-1
LOCAL_UPLOAD_DIR=./uploads

# Push Notifications
FCM_CREDENTIALS_FILE=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
